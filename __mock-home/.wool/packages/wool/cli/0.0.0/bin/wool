#!/usr/bin/env bash

# set -x

dir=$(dirname "$0")
loader_path="$WOOL_PATH/packages/wool/loader/0.0.0/src/loader.mjs"
cli_path="$WOOL_PATH/packages/wool/cli/0.0.0/src/cli.mjs"

run_node() {
  WOOL_ENTRY=$1 \
  node --experimental-modules --loader "$loader_path" $*
}

if [[ $1 == *.mjs ]]
then
  run_node $1
else
  run_node "$cli_path" $*
fi
